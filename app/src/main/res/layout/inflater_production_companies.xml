<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_10sdp"
    app:cardBackgroundColor="@color/colorWhiteffffff"
    android:layout_gravity="center_horizontal"
    app:cardCornerRadius="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:id="@+id/ivPosterCompanies"
            android:scaleType="fitCenter"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvCompaniesName"
            android:text="Companies Name"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/newBlackColor"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvCompaniesCountry"
            android:text="Companies Name"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/newBlackColor"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_5sdp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>